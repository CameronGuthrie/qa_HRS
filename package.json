{
    "name": "fullstack-app",
    "version": "1.0.0",
    "scripts": {
        "start": "node backend/index.js",
        "build": "npm install --prefix frontend && npm --prefix frontend run build && npm install --prefix backend",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon backend/index.js",
        "client": "npm run dev --prefix frontend"
    },
    "devDependencies": { 
        "concurrently": "^8.2.2",
        "nodemon": "^3.1.4"
    }
}
